#!/bin/bash
# info: update dns templates
# options: [RESTART]
#
# example: v-update-dns-templates
#
# This function for obtaining updated dns templates from LinkPanel package.

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Argument definition
restart=$1

# Includes
# shellcheck source=/etc/hestiacp/linkpanel.conf
source /etc/hestiacp/linkpanel.conf
# shellcheck source=/usr/local/linkpanel/func/main.sh
source $LINKPANEL/func/main.sh
# load config file
source_conf "$LINKPANEL/conf/linkpanel.conf"

# Perform verification if read-only mode is enabled
check_hestia_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Update templates
cp -rf $HESTIA_COMMON_DIR/templates/dns $LINKPANEL/data/templates/

#----------------------------------------------------------#
#                       LinkPanel                             #
#----------------------------------------------------------#

$BIN/v-log-action "system" "Info" "Updates" "Default DNS zone templates updated."
exit
